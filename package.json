{
  "name": "evalynn-ai-platform",
  "version": "1.0.0",
  "description": "AI-powered IELTS scoring platform",
  "private": true,
  "workspaces": ["client", "server"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run start:server",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules client/.next server/dist",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/evalynn-ai-platform.git"
  },
  "keywords": [
    "ielts",
    "ai",
    "scoring",
    "education",
    "nextjs",
    "express",
    "typescript"
  ],
  "author": "Tom Lai",
  "license": "MIT"
}
